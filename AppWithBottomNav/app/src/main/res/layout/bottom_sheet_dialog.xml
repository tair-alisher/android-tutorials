<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/share_imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/share_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Share"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/share_imageView"
        app:layout_constraintStart_toEndOf="@id/share_imageView"
        app:layout_constraintTop_toTopOf="@id/share_imageView" />

    <ImageView
        android:id="@+id/link_imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_link"
        app:layout_constraintStart_toStartOf="@id/share_imageView"
        app:layout_constraintTop_toBottomOf="@id/share_imageView"
        app:layout_constraintEnd_toEndOf="@id/share_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Link"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/link_imageView"
        app:layout_constraintStart_toEndOf="@id/link_imageView"
        app:layout_constraintTop_toTopOf="@id/link_imageView" />

    <ImageView
        android:id="@+id/edit_imageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toStartOf="@id/link_imageView"
        app:layout_constraintTop_toBottomOf="@id/link_imageView"
        app:layout_constraintEnd_toEndOf="@id/link_imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Edit"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/edit_imageView"
        app:layout_constraintStart_toEndOf="@id/edit_imageView"
        app:layout_constraintTop_toTopOf="@id/edit_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>